<% provide(:title, @user.name) %>

<% if signed_in? %>
<div class="row">
	<%= render 'shared/conversation_info' %>
</div>

<div class="row-fluid">
	<div class="span12">
		<div class="span5 offset1" id= "notes">
			<h2 class="conv-title">Notes</h2>
			<textarea class="form-control" rows="5" placeholder="Notes won't be saved for now..."></textarea>
		</div>
		<div class="span5" id= "conversation">
			<h2 class="conv-title">Messages</h2>
			<%= render 'shared/micropost_form' %>
			<%= render 'shared/conversation' %>
		</div>
	</div>
</div>
<%else%>
<section>
	<div class="row-fluid">
		<h2 class="conv-title">Notes and messages</h2>
		<div class="subtitle" style="text-align: center">Please sign in</div>
	</div>
</section>

<%end%>

<div id="half-slider">
	<ul class="slides">
		<li>
			<div class="img-theme show"></div>
			<div class="flex-caption"></div>
		</div>
	</li>
</ul>
</div>
<script language="javascript" type="text/javascript">
document.getElementById("input_to_be_loaded").focus();
</script>




